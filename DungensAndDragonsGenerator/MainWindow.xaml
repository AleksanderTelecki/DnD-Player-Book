                    </MenuItem.Icon>
                </MenuItem>

            </MenuItem>

            <MenuItem Header="_Dice Roller">

                <MenuItem Header="Open" >
                    <MenuItem.Icon>
                        <Image Source="./Resources/dice-512.bmp"></Image>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

