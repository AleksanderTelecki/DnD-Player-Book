            <MenuItem  Header="_File">
                <MenuItem Header="_New" >
                    <MenuItem.Icon>
                        <Image Source="./Resources/AddItemstoFolder_13217_32.bmp"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Open" Click="Menu_Open" >
                    <MenuItem.Icon>
                        <Image Source="./Resources/FolderOpen_7140_24.bmp"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="_Save" Click="Menu_Save"  >
