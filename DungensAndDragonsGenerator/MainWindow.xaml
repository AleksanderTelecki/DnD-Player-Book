                        <Image Source="./Resources/Icon_01.bmp"></Image>
                    </MenuItem.Icon>
                </MenuItem>

                <MenuItem Header="Monster Manual" >
                    <MenuItem.Icon>
                        <Image Source="./Resources/MLable.bmp"></Image>
